# Autostart Apps

# Compositor
(picom -b --experimental-backends --backend glx --config $HOME/.config/picom/picom.conf &) &&

# LX Session
lxpolkit &

# Desktop
pcmanfm --desktop &

# Notifications
dunst &

# Bar
tint2 &

# Applets
nm-applet &
volumeicon &

# Keyboard LEDs
g213-led -a 5294E2 &

# Compose key to the right CTRL
setxkbmap -option compose:rctrl &

