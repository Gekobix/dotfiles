# Autostart Apps

# Compositor
(picom -b --experimental-backends --backend glx --config $HOME/.config/picom/picom.conf &) &&

# LX Session
lxpolkit &

# Desktop && File daemon
(pcmanfm --desktop &) &&
(pcmanfm -d) &&

# Notifications
dunst &

# Bar
tint2 &

# Applets
(nm-applet &) &&
(volumeicon &) &&

# Keyboard LEDs
g213-led -a 458588 &

# MiniDLNA
minidlnad &

# Compose key to the right CTRL
setxkbmap -option compose:rctrl &

