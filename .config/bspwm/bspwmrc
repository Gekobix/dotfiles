#! /bin/sh

sxhkd &
setxkbmap -option compose:rctrl &

bspc monitor -d 1 2 3 4 5

bspc config border_width         	2
bspc config window_gap          	15
bspc config normal_border_color		"#1C2023"
bspc config focused_border_color	"#95AEC7"
bspc config presel_feedback_color       "#95AEC7"

bspc config split_ratio          	0.50
bspc config borderless_monocle   	true
bspc config gapless_monocle      	true
bspc config focus_follows_pointer	true

bspc rule -a Chromium desktop='^1'
bspc rule -a Pavucontrol state=floating
bspc rule -a Spotify desktop='^3'
bspc rule -a Lutris desktop='^5'
bspc rule -a Steam desktop='^5'
bspc rule -a discord desktop='^4'
bspc rule -a TelegramDesktop desktop='^4'
bspc rule -a Galculator state=floating
bspc rule -a Gimp-2.10 desktop='^5' follow=off

## Autostart programs ##

floatDesktop &
/usr/bin/lxpolkit &
picom -b --config $HOME/.config/picom/picom.conf &
killall dunst &
dunst &
$HOME/.config/polybar/launch.sh &
feh --bg-scale ~/Immagini/Sfondi/wallhaven-6kxmj6.jpg &
g213-led -a 95AEC7 &
blueman-applet &
