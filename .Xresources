
!    *----------------------------*
!    |  Dotfiles  -  .Xresources  |
!    *----------------------------*


! This files contains configuration for:
!  * terminal colours
!  * rofi

! === Transparency ===
*.alpha: 0.8

! === Font ===

*font:          Roboto Mono:style=Regular:size=12


! === Colours ===

! main
*.cursorColor:  #000000
*background:    #1A1C1E
*foreground:    #CCCCCC

! black
*color0:        #151520
*color8:        #3c3c5c
! red
*color1:        #B73838
*color9:        #82a0df
! green
*color2:        #5671a0
*color10:       #789ee1
! yellow
*color3:        #5b70a0
*color11:       #7f9cdf
! blue
*color4:        #4c6ea0
*color12:       #6c9ce3
! magenta
*color5:        #7a7fa0
*color13:       #a5abd8
! cyan
*color6:        #5471a0
*color14:       #769fe1
! white
*color7:        #8581a0
*color15:       #b2add7


! === rofi ===

rofi.modi:                           window,drun
rofi.sidebar-mode:                   true
rofi.terminal:                       termite
rofi.ssh-client:                     ssh
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.opacity:                        95
rofi.width:                          40
rofi.lines:                          15
rofi.columns:                        1
rofi.show-icons:		     true
rofi.icon-theme:		     Material-Black-Cherry-Numix
rofi.drun-icon-theme:		     Material-Black-Cherry-Numix
rofi.font:                           Roboto Mono Regular 12
rofi.fg:                             #CCCCCC
rofi.bg:                             #1A1C1E
rofi.fg-active:                      #34405a
rofi.fg-urgent:                      #34405a
rofi.hlfg-active:                    #5e73a0
rofi.hlfg-urgent:                    #5e73a0
rofi.bg-active:                      #34405a
rofi.bg-urgent:                      #34405a
rofi.hlbg-active:                    #5d729f
rofi.hlbg-urgent:                    #5d729f
rofi.bgalt:                          #5671a0
rofi.hlfg:                           #34405a
rofi.hlbg:                           #34405a
rofi.bc:                             #789ee1
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #1A1C1E,  #CCCCCC,  #09090A,  #B73838,  #FFFFFF

!                  'background', 'border'
rofi.color-window: #1A1C1E,      #B73838
rofi.bw:                             2
rofi.location:                       0
rofi.padding:                        10
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.fuzzy:                          false
rofi.line-margin:                    4
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
rofi.markup-rows:                    false
rofi.scrollbar-width:                8
